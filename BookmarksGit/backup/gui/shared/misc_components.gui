			framesize = { 70 26 }

			block "bg"
			{
				frame = "[SkillItem.GetFrame]"
			}
		}

		block "tooltip"
		{
			tooltip = "SKILL_ITEM_TOOLTIP"
		}

		icon = {
			name = "skill_icon"
			texture = "gfx/interface/icons/icon_skills.dds"
			framesize = { 60 60 }

			block "icon"
			{
				frame = "[SkillItem.GetFrame]"
			}

			block "icon_size"
			{
				size = { 30 30 }
			}

		}

		text_single = {
			name = "skill_value"
