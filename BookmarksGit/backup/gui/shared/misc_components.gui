	type skill_icon_grid = dynamicgridbox
	{
		flipdirection = yes
		datamodel_wrap = 6

		item = {
			skill_icon_label = {}
		}
	}

	type skill_sort_icon = button {
		name = "skill_icon"
		texture = "gfx/interface/icons/icon_skills.dds"
		size = { 32 32 }
		framesize = { 60 60 }
		using = tooltip_above
		block "position"
		{
			position = { 0 0 }
		}
		block "icon"
		{
			frame = 1
