												mirror = horizontal
												size = { 20 100% }
												texture = "gfx/interface/progressbars/progressbar_center_glow.dds"

												state = {
													name = a
													next = b
													trigger_on_create = yes
													duration = 0.1
													alpha = 1
												}

												state = {
													name = b
													next = a
													duration = 0.2
													alpha = 0.9
												}
											}

										}
									}
								}

								widget = {
